
  <%= form_for @handyman, :html => {class: 'form-horizontal'} do |f| %>
    <% if @handyman.errors.any? %>
      <div id="error_explanation">
        <h2><%= pluralize(@handyman.errors.count, "error") %> prohibited this @handyman from being saved:</h2>

        <ul>
        <% @handyman.errors.full_messages.each do |message| %>
          <li><%= message %></li>
        <% end %>
        </ul>
      </div>
    <% end %>

      <fieldset>
        <%= f.fields_for :user do |user| %>
          <div class="form-group">
            <%= user.label :first_name, class:'col-md-4 control-label' %>
            <div class="col-md-5">
              <%= user.text_field :first_name, class:'form-control input-md', placeholder:'First Name' %>
            </div>
          </div>

          <div class="form-group">
            <%= user.label :last_name, class:'col-md-4 control-label' %>
            <div class="col-md-5">
              <%= user.text_field :last_name, class:'form-control input-md', placeholder:'Last Name' %>
            </div>
          </div>

          <div class="form-group">
            <%= user.label :email, class:'col-md-4 control-label' %>
            <div class="col-md-5">
              <%= user.text_field :email, class:'form-control input-md', placeholder:'Email' %>
            </div>
          </div>

          <div class="form-group">
            <%= user.label :phone_number, class:'col-md-4 control-label' %>
            <div class="col-md-5">
              <%= user.text_field :phone_number, class:'form-control input-md', placeholder:'Phone number' %>
            </div>
          </div>

          <div class="form-group">
            <%= user.label :street_address, class:'col-md-4 control-label' %>
            <div class="col-md-5">
              <%= user.text_field :street_address, class:'form-control input-md', placeholder:'Street Address' %>
            </div>
          </div>

          <div class="form-group">
            <%= user.label :city, class:'col-md-4 control-label' %>
            <div class="col-md-5">
              <%= user.text_field :city, class:'form-control input-md', placeholder:'City' %>
            </div>
          </div>

          <div class="form-group">
            <%= user.label :country, class:'col-md-4 control-label' %>
            <div class="col-md-5">
              <%= user.text_field :country, class:'form-control input-md', placeholder:'Country' %>
            </div>
          </div>



      </fieldset>

        <div class="actions">
          <%= f.submit class:"btn btn-primary btn-lg"%>
        </div>
    <% end %>
  <% end %>
