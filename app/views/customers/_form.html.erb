<div class="container">
  <%= form_for @customer do |f| %>
    <% if @customer.errors.any? %>
      <div id="error_explanation">
        <h2><%= pluralize(@customer.errors.count, "error") %> prohibited this @customer from being saved:</h2>

        <ul>
        <% @customer.errors.full_messages.each do |message| %>
          <li><%= message %></li>
        <% end %>
        </ul>
      </div>
    <% end %>
    <%= f.label :customer %>
      <%= f.fields_for :user do |user| %>
        <div class="form-group">
          <%= user.label :first_name %>
          <%= user.text_field :first_name, class: 'form-control' %>
        </div>
        <div class="form-group">
          <%= user.label :last_name %>
          <%= user.text_field :last_name %>
        </div>
        <div class="form-group">
          <%= user.label :country %>
          <%= user.text_field :country %>
        </div>
        <div class="form-group">
          <%= user.label :city %>
          <%= user.text_field :city %>
        </div>
        <div class="form-group">
          <%= user.label :street_address %>
          <%= user.text_field :street_address %>
        </div>
        <div class="form-group">
          <%= user.label :email %>
          <%= user.text_field :email %>
        </div>
        <div class="form-group">
          <%= user.label :phone_number %>
          <%= user.text_field :phone_number %>
        </div>

      <div class="actions">
        <%= f.submit %>
      </div>
    <% end %>
  <% end %>
</div>
